
<%= form_tag "/viewing-party", method: :post do %>
  <h1><%= label_tag "Viewing party for '#{@movie.title}'" %></h1><br>
  <%= hidden_field_tag :movie, @movie.title  %>
  <%= label_tag 'Party duration in minutes(default time is movie runtime)'%> <br>
  <%= text_field_tag :duration, @movie.runtime%> <br>
  <%= label_tag :party_date %> <br>
  <%= date_field_tag :party_date %><br>
  <%= label_tag :start_time %><br>
  <%= time_field_tag :start_time %><br>
  <%= submit_tag 'Create Party' %>
<% end %>
