<h1>New User Registration</h1>

<%= form_tag('/registration') do %>
  <section>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <br>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
    <br>
    <%= label_tag :password_confirmation %>
    <%= text_field_tag :password_confirmation %>
    <br>
    <%= submit_tag "Submit", class: :button %>
  </section>
<% end %>
